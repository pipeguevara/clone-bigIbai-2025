---
import GradientOverlay from "../components/GradientOverlay.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Big ibai</title>
    <meta name="description" content="Big ibai website" />
    <meta name="keywords" content="ibai, big ibai, streamer, twitch, youtube" />
    <meta name="author" content="Ibai Llanos" />
    <meta name="robots" content="index, follow" />
  </head>
  <body id="background-mask" class="min-h-screen w-full">
    <GradientOverlay />
    <div class="relative z-100"></div>
    <slot />
  </body>
</html>

<style is:global>
  @import "tailwindcss";
  @plugin "@midudev/tailwind-animations";
</style>
<style>
  body {
    background: #000;
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  #background-mask {
    background-image: url("fondo.webp");
    background-size: cover;
    background-position: top;
    background-repeat: no-repeat;
  }
</style>
