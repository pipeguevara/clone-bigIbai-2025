---
import GradientOverlay from "../components/GradientOverlay.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Big ibai</title>
    <meta name="description" content="Big ibai website" />
    <meta name="keywords" content="ibai, big ibai, streamer, twitch, youtube" />
    <meta name="author" content="Ibai Llanos" />
    <meta name="robots" content="index, follow" />
  </head>
  <body id="background-mask" class="min-h-screen w-full">
    <GradientOverlay />
    <div class="relative z-100"></div>
    <slot />
  </body>
</html>

<style is:global>
  @import "tailwindcss";
  @plugin "@midudev/tailwind-animations";
  
  @theme{
    --color-brand: #f8b133;
  }

</style>
<style>
  body {
    background: #000;
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  #background-mask {
    background-image: url("fondo.webp");
    background-size: cover;
    background-position: top;
    background-repeat: no-repeat;

    mask-image: url("/public/lock.svg");
    mask-position: center 50%;
    mask-repeat: no-repeat;
    mask-size: 50px;

    &.unlook{
      animation: lock-reveal 1s forwards ease-in-out;
    }
  }

  @keyframes lock-reveal{
    0%{
      mask-size: 50px;
    }
    100%{
      mask-size: 1000vh;
    }
  }
</style>

<script>
    const mask = document.getElementById("background-mask") as HTMLElement;
    document.addEventListener("DOMContentLoaded", () => {
        mask.classList.add("unlook");
    });
</script>